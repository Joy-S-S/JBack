<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Root Backup"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Root Status -->
        <Button
            android:id="@+id/btnCheckRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Root Access"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Root status unknown"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Backup Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Switch
                android:id="@+id/switchBackupData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Backup App Data"
                android:checked="true" />

            <Switch
                android:id="@+id/switchBackupFolders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Backup Folders"
                android:checked="true" />

        </LinearLayout>

        <!-- App Selection Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Installed Apps"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSelectAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select All" />

        </LinearLayout>

        <!-- App List -->
        <ListView
            android:id="@+id/listViewApps"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:choiceMode="multipleChoice"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBackup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create Backup"
                android:layout_marginEnd="8dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btnRestore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Restore"
                android:layout_marginStart="8dp"
                android:enabled="false" />

        </LinearLayout>

        <!-- Progress -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
